clear

echo -e "Started autotest\n"

vendor/bin/phpcs index.php --standard='ruleset.xml'
echo -e "Finished PHP_CodeSniffer for custom files"

vendor/bin/phpcs src --standard='ruleset.xml'
echo -e "Finished PHP_CodeSniffer for src folder"

vendor/bin/phpcs tests --standard='ruleset.xml'
echo -e "Finished PHP_CodeSniffer for tests folder"

vendor/bin/phpstan analyse src --level 7
echo -e "Finished PHPStan for src folder\n"

vendor/bin/phpunit
echo -e "Finished PHPUnit for test folder\n"

php phpDocumentor.phar -d src -t api
echo -e "Finished phpDocumentor.phar for API documentation\n"

echo -e "Finished autotest"