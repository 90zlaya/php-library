{
    "name": "90zlaya/php-library",
    "type": "library",
    "description": "PHP Library is set of custom made PHP classes containing most useful methods and variables for Web Development.",
    "keywords": [
        "php7",
        "oop-library"
    ],
    "homepage": "https://github.com/90zlaya/php-library",
    "license": "MIT",
    "authors": [
        {
            "name": "Zlatan Stajic",
            "email": "contact@zlatanstajic.com",
            "homepage": "https://www.zlatanstajic.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "phplibrary\\": "src"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "phpoffice/phpspreadsheet": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpstan/phpstan": "^0.9.1",
        "squizlabs/php_codesniffer": "^3.2",
        "satooshi/php-coveralls": "^2.0"
    },
	"scripts": {
		"phpunit": "bash vendor/bin/phpunit",
		"phpstan": "bash vendor/bin/phpstan analyse src --level max",
		"codesniffer": "bash vendor/bin/phpcs index.php src tests --standard='ruleset.xml'"
	}
}
